#定义数据模型
definitions:
  R:
      type: object
      properties:
        code:
          description: 状态码 0：成功  非0：失败
          type: integer
          format: int32
        msg:
          description: 失败原因
          type: string
  Login:
      type: object
      properties:
        code:
          description: 状态码 0：成功  非0：失败
          type: integer
          format: int32
        token:
          description: token
          type: string
        expire:
          description: 过期时长
          type: integer
          format: int32
        msg:
          description: 失败原因
          type: string

  LoginApiForm:
    type: object
    properties:
      username:
        description: 用户名
        type: string
      password:
        description: 密码
        type: string

  FileUpload:
      type: object
      properties:
        code:
          description: 状态码 0：成功  非0：失败
          type: integer
          format: int32
        url:
          description: 文件URL地址
          type: string
        msg:
          description: 失败原因
          type: string

  DeviceEntity:
      type: object
      properties:
        id:
          description: ID
          type: integer
          format: int64
        SiteId:
          description: 站点ID
          type: integer
          format: int64
        mn:
          description: 设备编码
          type: string
          format: string
        passwd:
          description: 密码
          type: string
          format: string

        temperatureHumidityLimit:
          description: 温湿度控制
          type: string
          format: string
        uploadInterval:
          description: 称量间隔（小时）
          type: integer
          format: int64
        createAt:
          description: 创建时间
          type: String
          format: date-time