swagger: '2.0'
info:
  description: 代码千万行，文档第一行。接口不规范，开发两行泪。
  version: 1.0.0
  title: 接口文档平台

basePath: /dust

schemes:
  - http

#认证
securityDefinitions:
  api_key:
    type: "apiKey"
    name: "token"
    in: "header"

#定义接口数据
paths:
  /sys/token:
    post:
      tags:
        - 用户登录
      summary: 获取token
      produces:
        - application/json
      parameters:
        - name: body
          description: 登陆对象
          in: body
          type: string
          schema:
            $ref: '#/definitions/LoginApiForm'
          required: true
    responses:
      '200':
        description: 返回token信息
        schema:
          $ref: '#/definitions/Login'

  /generator/appupdate/download/last:
    get:
      tags:
        - 应用更新
      summary: 下载最新app
      produces:
        - application/json
    responses:
      '200':
        description: 下载文件

  /generator/device/mn/{mn}:
    get:
      tags:
        - 设备管理
      summary: 根据mn编码查询
      produces:
        - application/json
      parameters:
        - name: mn
          description: 设备编码
          in: path
          type: String
          required: true
      responses:
        '200':
          description: 设备
          schema:
            type: object
            properties:
              code:
                description: 状态码 0：成功  非0：失败
                type: integer
                format: int32
              user:

